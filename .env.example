# =============================================================================
# BookRoom - Variables d'environnement
# =============================================================================
# 1. Copiez ce fichier en .env
# 2. Remplissez vos vraies clés Clerk et Stripe
# 3. NE COMMITEZ JAMAIS le fichier .env !
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=bookroom
POSTGRES_PASSWORD=changez_ce_mot_de_passe_en_production
POSTGRES_DB=bookroom
POSTGRES_PORT=5433

# URL de connexion (utilisée par Prisma dans l'API)
# En Docker: postgres:5432 | En local: localhost:5433
DATABASE_URL=postgresql://bookroom:changez_ce_mot_de_passe_en_production@postgres:5432/bookroom

# -----------------------------------------------------------------------------
# Clerk Authentication (https://dashboard.clerk.com)
# -----------------------------------------------------------------------------
# Récupérez vos clés dans: Dashboard > Settings > API Keys

# Clé publique (utilisée par API et Frontend)
CLERK_PUBLISHABLE_KEY=pk_test_VOTRE_CLE_PUBLIQUE_ICI

# Clé secrète (utilisée par API uniquement)
CLERK_SECRET_KEY=sk_test_VOTRE_CLE_SECRETE_ICI

# Clé pour le frontend (préfixe VITE_ requis)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_VOTRE_CLE_PUBLIQUE_ICI

# -----------------------------------------------------------------------------
# Stripe Payment (https://dashboard.stripe.com)
# -----------------------------------------------------------------------------
# Récupérez vos clés dans: Dashboard > Developers > API keys

# Clés secrètes (API uniquement)
STRIPE_SECRET_KEY=sk_test_VOTRE_CLE_SECRETE_STRIPE
STRIPE_PUBLISHABLE_KEY=pk_test_VOTRE_CLE_PUBLIQUE_STRIPE
STRIPE_WEBHOOK_SECRET=whsec_VOTRE_WEBHOOK_SECRET
STRIPE_MODE=test

# Clé publique pour le frontend (si nécessaire)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_VOTRE_CLE_PUBLIQUE_STRIPE

# -----------------------------------------------------------------------------
# URLs & Ports
# -----------------------------------------------------------------------------
API_PORT=3001
FRONTEND_PORT=5173

# URL de l'API (utilisée par le Frontend)
VITE_API_URL=http://localhost:3001/api

# URL du Frontend (utilisée par l'API pour CORS et redirections)
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Configuration générale
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
